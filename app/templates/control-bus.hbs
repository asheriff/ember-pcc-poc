<div class='page-content'>
  <h2>Address Book</h2>

  <div class='flex-rows control-groups'>
    {{#each bus in model}}
      <div class='flex-item control-group'>
        <h3>{{bus.name}}</h3>
        <ul class='fields horizontal'>
          <li class='field'>
            {{switch-button}}
          </li>
          <li class='field'>
           {{view "select"
              content=groups
              optionValuePath="content"
              optionLabelPath="content.user_label"
              value=bus.group
            }}
          </li>
          <li class='field'>
            {{#link-to 'macro' class='btn'}}Info...{{/link-to}}
          </li>
        </ul>
      </div>
    {{/each}}
  </div>
</div>

<div class='tiles page-nav'>
  {{back-button}}
</div>
