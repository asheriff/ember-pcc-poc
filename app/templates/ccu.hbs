<div class='page-content ccu'>
  <h2>Podium Cam (2) &ndash; RS-30 USB &raquo; Active CCU Settings</h2>

  <ul class='fields'>
    <li class='field'>
      <span class='switch'>
        <div class='switch-control off'>
          <span class='switch-state-label'>Off</span>
          <span class='switch-btn'></span>
        </div>
        <div class='switch-label'>Auto Iris</div>
      </span>
      <a href='#' class='btn'>Iris...</a>
      <a href='#' class='btn'>Iris Gain...</a>
    </li>
  </ul>

  <ul class='fields'>
    <li class='field'>
      <span class='switch'>
        <div class='switch-control on'>
          <span class='switch-state-label'>On</span>
          <span class='switch-btn'></span>
        </div>
        <div class='switch-label'>Auto White Balance</div>
      </span>
      <a href='#' class='btn btn-disabled'>Red Gain...</a>
      <a href='#' class='btn btn-disabled'>Blue Gain...</a>
      <a href='#' class='btn btn-disabled'>One Push...</a>
    </li>
  </ul>

  <ul class='fields horizontal'>
    <li class='field'>
      <a href='#' class='btn'>Detail...</a>
    </li>
    <li class='field'>
      <a href='#' class='btn'>Chroma...</a>
    </li>
    <li class='field'>
      <a href='#' class='btn'>Gamma...</a>
    </li>
    <li class='field'>
      <a href='#' class='btn'>Brightness...</a>
    </li>
  </ul>
</div>

<div class='tiles page-nav'>
  {{#link-to 'preset' class='btn tile-btn'}}
    <span class='icon'>~icon~</span>
    <span class='text'>Save as Scene</span>
  {{/link-to}}

  {{#link-to 'home' class='btn tile-btn'}}
    <span class='icon'>~icon~</span>
    <span class='text'>Back</span>
  {{/link-to}}
</div>
